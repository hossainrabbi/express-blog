<!DOCTYPE html>
<html lang="en">
  <%- include('./dashboardPartials/head.ejs') %>
  <body data-sidebar="dark">
    <!-- Begin page -->
    <div id="layout-wrapper">
      <%- include('./dashboardPartials/header.ejs') %> <%-
      include('./dashboardPartials/sidebar.ejs') %>
      <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                            <h4 class="mb-sm-0">Users Tables</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Users</a></li>
                                    <li class="breadcrumb-item active">All Users</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <% if(users && users?.length > 0) { %> 
                                    <table id="datatable" class="table table-bordered dt-responsive nowrap align-middle text-center" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Role</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            <% users.map((item, i) => { %>
                                                <tr>
                                                    <td><%= i + 1 %> </td>
                                                    <td><%= item?.name %> </td>
                                                    <td><%= item?.email %></td>
                                                    <td><%= item?.role %></td>
                                                    <td>
                                                        <button class="btn btn-success py-1">Edit</button>
                                                        <button class="btn btn-danger py-1">Delete</button>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                <% } %> 
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->

            </div> <!-- container-fluid -->
        </div>
        <!-- End Page-content -->


        <%- include('./dashboardPartials/footer.ejs') %>
      </div>
      <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->

    <!-- JAVASCRIPT -->
    <%- include('./dashboardPartials/script.ejs') %>
  </body>
</html>
